<p id="notice"><%= notice %></p>
<div class="container">
  <h1>Products</h1>
  <div>
    <table class="table table-info table-striped">
      <ol class="fs-2">
        <thead class="table-secondary">
          <td class="text-center"> Name </td>
          <td class="text-center"> Price </td>
          <td class="text-center"> Stripe Product ID </td>
          <td class="text-center"> Stripe Price ID </td>
          <td class="text-center"> Sales Count  </td>
          <td class="text-center"> Payment  </td>
          <td colspan=3 class="text-center"> Action </td>
        </thead>
        <% @products.each do |product| %>
          <tr>
            <td class="text-center"> <%= link_to product.name, product_path(product) %> </td>
            <td class="text-center"><%= number_to_currency(product.price/100, unit: "Rs") %></td>
            <td class="text-center"><%= product.stripe_product_id %></td>
            <td class="text-center"><%= product.stripe_price_id %></td>
            <td class="text-center"><%= product.sales_count %></td>
            <td class="text-center"> <%= button_to "Buy Now", checkout_create_path, params: {id: product.id}, remote: true %> </td>
            <td class="text-center"><%= button_to "Show",product_path(product),method: :get, class:"btn-success border-0 rounded-pill shadow px-3 py-2" %></td>
            <td class="text-center"><%= button_to "Edit",edit_product_path(product),method: :get, class:"btn-primary border-0 rounded-pill shadow px-3 py-2" %></td>
            <td class="text-center"><%= button_to "Delete",product_path(product),method: :delete, class:"btn-danger border-0 rounded-pill shadow px-3 py-2",  data: { confirm: 'Are you sure?' }  %></td>
          </tr>
        <% end %>
      </ol>
    </table>
  </div>
  <div class="d-flex">
    <%= button_to "Add New product", new_product_path, method: :get ,class:"btn-warning border-0 rounded-pill shadow p-3 m-3" %>
  </div>
</div>
<br>
<% if params[:session_id].present? %>
  <hr>
  <% @session = Stripe::Checkout::Session.retrieve(params[:session_id]) %>
  <%= @session.payment_intent %>
  <%= Stripe::PaymentIntent.retrieve(@session.payment_intent) %>
  <% @session_with_expand = Stripe::Checkout::Session.retrieve({
  id: params[:session_id],
  expand: ["payment_intent", "line_items"]
}) %>
  <hr>
  <% @session_with_expand.line_items.data.each do |line_item| %>
    <%= line_item.price.id %>
    <%= line_item.price.product %>
  <% end %>
<% end %>
